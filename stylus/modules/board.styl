[data-dragging]
  *
    cursor grabbing !important

body
  text-align center

#board
  margin-top 100px
  display inline-block
  position relative
  transform-style preserve-3d
  
  &:after
    display block
    content ""
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    transform translateZ(-80px)
    background rgba(black, 0.075)
  
  canvas
    display block
    margin 0 auto
    transform-origin 50% 50%
    background yellow
    cursor grab
    transform rotateX(0)