#board
  display inline-block
  position relative
  transform-style preserve-3d
  
  &:after
    display block
    content ""
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    transform translateZ(-80px)
    background rgba(black, 0.075)
    -webkit-filter blur(3px)
  
  canvas
    display block
    margin 0 auto
    transform-origin 50% 50%
    background white url(http://www.johnsusek.com/projects/textures/lawdogs/wp4.jpg)
    background-size 400px auto
    cursor grab
    transform rotateX(0)

[data-dragging]
  *
    cursor grabbing !important