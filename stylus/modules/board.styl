[data-dragging]
  *
    cursor grabbing !important

body
  text-align center
  perspective 1000px

#board
  margin-top 100px
  display inline-block
  position relative
  transform-style preserve-3d
  
  canvas
    display block
    margin 0 auto
    transform-origin 50% 50%
    background yellow
    cursor grab
    transform rotateX(0)