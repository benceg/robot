#robot
  bottom 0
  left 0
  background black
  transition transform 1s
  transform-style preserve-3d
  border-radius 50%
  perspective 0
  display block
  position absolute
  background url(images/roomba.png) no-repeat 50% 50%
  background-size cover

  &:before
  &:after
    display block
    width 100%
    height 100%
    position absolute
  
  &:before
    content ""
    background url(images/kitty.png) no-repeat 50% 100%
    background-size cover
    transform translateZ(26px) rotateY(90deg) rotateZ(-90deg)
  
  &:after
    content ""
    background darken(white, 40%)
    border-radius 50%
    transform translateZ(-6px)