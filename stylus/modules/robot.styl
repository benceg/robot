#robot
  bottom 0
  left 0
  background black
  transition transform 1s
  margin 20px
  transform-style preserve-3d
  border-radius 50%
  perspective 0
  
  &
  &:before
  &:after
    display block
    width 60px
    height 60px
    position absolute
  
  &:before
    content ""
    background url(http://th03.deviantart.net/fs71/PRE/i/2012/340/0/6/png_cat_by_moonglowlilly-d5n7zqm.png) no-repeat 50% 50%
    background-size cover
    transform translateZ(20px) rotateY(90deg) rotateZ(-90deg)
  
  &:after
    content ""
    background rgba(0,0,0,0.3)
    border-radius 50%
    transform translateZ(-9px)